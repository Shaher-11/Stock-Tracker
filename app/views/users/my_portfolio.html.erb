
<h1>My Portfolio</h1>

<div class="search-area">
<h3>Search Stocks</h3>
<%= form_tag search_stock_path, remote: true, method: :get do %>
 <div class="form-group row">
  <div class="col-sm-9 no-right-padding">
   <%= text_field_tag :stock, params[:stock], 
   placeholder: "Stock ticker symbol", autofocus: true, class: "form-control from-control-lg", style:"height:50px"%>
  </div>
  <div class="col-sm-3 no-left-padding">
   <%= button_tag type: :submit, class: "btn btn-primary" do %>
      <%= fa_icon 'search 2x' %>
   <% end %>
  </div>
 </div>
<% end %>
</div>
<div id="results">
</div>

<% if !@tracked_stocks.empty? %>
<%=  render 'stocks/list' %>
  <% end %>



















